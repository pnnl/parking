{
  "compilerOptions": {
    "target": "es5",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "../common/"
  },
  "include": [
    "src/common/"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}